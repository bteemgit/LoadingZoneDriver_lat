<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewCustomPic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageViewCustomPic"
            android:layout_toRightOf="@+id/imageViewCustomPic"
            android:text="Swarooplal" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCustomerName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imageViewCustomPic"
            android:layout_toRightOf="@+id/imageViewCustomPic"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textLocationFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#3289C7"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/textLocationTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/liner_trucktype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Truck Type          :" />

            <TextView
                android:id="@+id/textTruckType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="TruckType" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_truckDimension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_trucktype"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Truck Dimension :" />

            <TextView
                android:id="@+id/textTruckDimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="TruckType" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_truckDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_truckDimension"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Loading Date     :" />

            <TextView
                android:id="@+id/textTruckDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="TruckType" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_truckBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_truckDate"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Budget               :" />

            <TextView
                android:id="@+id/textTruckBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="TruckType" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_truckBudget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:text="Assigned truck"
                android:textColor="#000000"
                android:id="@+id/textView2" />

            <TextView
                android:id="@+id/textAssignedtruckName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cb4190"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textView2" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>